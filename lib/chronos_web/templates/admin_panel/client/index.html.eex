<h1>Listing Clients</h1>

<table>
  <thead>
    <tr>
      <th>Initials</th>
      <th>Bed number</th>
      <th>Dorm</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for client <- @clients do %>
    <tr>
      <td><%= client.initials %></td>
      <td><%= client.bed_number %></td>
      <td><%= client.dorm %></td>

      <td>
        <span><%= link "Show", to: Routes.admin_panel_client_path(@conn, :show, client) %></span>
        <span><%= link "Edit", to: Routes.admin_panel_client_path(@conn, :edit, client) %></span>
        <span><%= link "Delete", to: Routes.admin_panel_client_path(@conn, :delete, client), method: :delete, data: [confirm: "Are you sure?"] %></span>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<span><%= link "New Client", to: Routes.admin_panel_client_path(@conn, :new) %></span>
